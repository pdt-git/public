<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">

      <view
            name="PDT Context View"
            category="org.cs3.pdt"
            class="pdt.y.focusview.FocusView"
            id="pdt.view.focus">
      </view>
      
      <view
            name="PDT Global View"
            category="org.cs3.pdt"
            class="pdt.y.focusview.GlobalView"
            id="pdt.view.global">
      </view>
      
      <view
            name="PDT Load Graph"
            category="org.cs3.pdt"
            class="pdt.y.focusview.DependenciesView"
            id="pdt.view.dependencies">
      </view>
      <view
            category="org.cs3.pdt"
            class="pdt.y.focusview.LogtalkView"
            id="pdt.view.logtalk.entity"
            name="Logtalk Graph">
      </view>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="pdt.y.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.cs3.pdt.common.internal.preferences.PDTCommonPreferencePage"
            class="pdt.y.preferences.MainPreferencePage"
            id="pdt.y.focusview.preferences.PreferencePage"
            name="Context View">
      </page>
      <page
            category="pdt.y.focusview.preferences.PreferencePage"
            class="pdt.y.preferences.FileAppearancePreferences"
            id="pdt.y.preferences.FileAppearance"
            name="File Appearance">
      </page>
      <page
            category="pdt.y.focusview.preferences.PreferencePage"
            class="pdt.y.preferences.PredicateAppearancePreferences"
            id="pdt.y.preferences.PredicateAppearance"
            name="Predicate Appearance">
      </page>
      <page
            category="pdt.y.focusview.preferences.PreferencePage"
            class="pdt.y.preferences.PredicateLayoutPreferences"
            id="pdt.y.focusview.preferences.LayoutPreferences"
            name="Predicate Layout">
      </page>
      <page
            category="pdt.y.focusview.preferences.PreferencePage"
            class="pdt.y.preferences.EdgeAppearancePreferences"
            id="pdt.y.preferences.EdgeAppearance"
            name="Edge Appearance">
      </page>
      <page
            category="pdt.y.focusview.preferences.PreferencePage"
            class="pdt.y.preferences.SkinsPreferencePage"
            id="pdt.y.preferences.FocusViewSkinsPreferences"
            name="Skins">
      </page>
   </extension>
   <extension
         point="org.cs3.prolog.connector.bootstrapContribution">
      <fileContribution
            id="pdt.contextview.fileContribution"
            path="pl/load.pl">
         <dependency
               contribution="pdt.builder.analyzer">
         </dependency>
         <dependency
               contribution="org.cs3.pdt.common.pl.path">
         </dependency>
      </fileContribution>
      <fileSearchPathContribution
            alias="pdt_contextview_pl"
            id="pdt.contextview.pl"
            path="pl/">
      </fileSearchPathContribution>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.cs3.pdt.perspective">
         <view
               id="pdt.view.focus"
               minimized="false"
               relationship="stack"
               relative="prolog.perspective.views.folder">
         </view>
         <view
               id="pdt.view.global"
               minimized="false"
               relationship="stack"
               relative="prolog.perspective.views.folder">
         </view>
         <view
               id="pdt.view.dependencies"
               minimized="false"
               relationship="stack"
               relative="prolog.perspective.views.folder">
         </view>
         <viewShortcut
               id="pdt.view.focus">
         </viewShortcut>
         <viewShortcut
               id="pdt.view.global">
         </viewShortcut>
         <viewShortcut
               id="pdt.view.dependencies">
         </viewShortcut>
         <viewShortcut
               id="pdt.view.logtalk.entity">
         </viewShortcut>
      </perspectiveExtension>
   </extension>
</plugin>
